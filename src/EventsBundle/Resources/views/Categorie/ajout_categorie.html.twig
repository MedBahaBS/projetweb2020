{% extends 'Base_backend/base.html.twig' %}
{% block titre %}
     Ajout d'une catégorie
{% endblock %}

{% block content %}
    <!-- start page content -->
    <div class="page-content-wrapper">
        <div class="page-content">
            <div class="page-bar">
                <div class="page-title-breadcrumb">
                    <div class=" pull-left">
                        <div class="page-title">Ajout d'une catégorie</div>
                    </div>
                    <ol class="breadcrumb page-breadcrumb pull-right">
                        <li><i class="fa fa-home"></i>&nbsp;
                            <a class="parent-item"
                               href="{{ path('events_accueil') }}">Accueil</a>&nbsp;
                            <i class="fa fa-angle-right"></i>
                        </li>
                        <li><a class="parent-item" href="{{ path('events_listecategorie') }}">Catégories</a>&nbsp;<i class="fa fa-angle-right"></i>
                        </li>
                        <li class="active">Ajouter une catégorie</li>
                    </ol>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 col-sm-12">
                    <div class="card card-box">
                        <div class="card-head">
                            <header>Information sur la catégorie</header>
                        </div>
                        <div class="card-body" id="bar-parent">
                            {{form_start(f, {'attr': {'class': 'form-horizontal'}} )}}
                            <div class="form-group row">
                                <label class="control-label col-md-3">
                                    Libelle de la catégorie
                                    <span class="required"> * </span>
                                </label>
                                {{ form_widget(f.Libelle, {'attr': {'class' : 'col-md-5 form-control input-height'}}) }}
                                {% if form_errors(f.Libelle) is not empty %}
                                    <div class="alert alert-danger" >
                                        {{ form_errors(f.Libelle) }}
                                    </div>
                                {% endif %}
                            </div>
                            <div class="form-group row">
                                <label class="control-label col-md-3">
                                    Description de la catégorie
                                    <span class="required"> * </span>
                                </label>
                                {{ form_widget(f.Description, {'attr': {'class' : 'col-md-5 form-control input-height'}}) }}
                                {% if form_errors(f.Description) is not empty %}
                                    <div class="alert alert-danger" >
                                        {{ form_errors(f.Description) }}
                                    </div>
                                {% endif %}
                            </div>
                            <div class="form-actions">
                                <div class="row">
                                    <div class="offset-md-3 col-md-9">
                                        {{ form_widget(f.Ajouter,{'attr' :{ 'class' : 'btn btn-info m-r-20'}}) }}
                                        <button type="reset" class="btn btn-default">Annuler</button>
                                    </div>
                                </div>
                            </div>
                            {{form_end(f)}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- end page content -->
{% endblock %}
{% block javascripts %}
    <script type="text/javascript">
        $("#evenement").addClass("open active");
        $("#categorie").addClass("active");
    </script>
{% endblock %}