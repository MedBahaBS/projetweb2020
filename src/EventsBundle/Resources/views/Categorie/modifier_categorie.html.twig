{% extends '@Events/Base_backend/base.html.twig' %}
{% block title %}
     Modification d'une catégorie
{% endblock %}

{% block navbar %}
    <li class="nav-item active open">
        <a href="#" class="nav-link nav-toggle">
            <span class="title">Evenements</span><span class="arrow"></span>
        </a>
        <ul class="sub-menu">
            <li class="nav-item">
                <a href="{{ path('events_accueil') }}" class="nav-link"> <span class="title">
												Calendrier</span>
                </a>
            </li>
            <li class="nav-item">
                <a href="{{ path('events_listeevent') }}" class="nav-link "> <span class="title">
												Liste des événements</span>
                </a>
            </li>
            <li class="nav-item">
                <a href="#" class="nav-link "> <span class="title">Evénements en attente</span>
                </a>
            </li>
            <li class="nav-item active">
                <a href="{{ path('events_listecategorie') }}" class="nav-link "> <span class="title">Liste des catégories</span>
                </a>
            </li>
        </ul>
    </li>
{% endblock %}

{% block content %}
    <!-- start page content -->
    <div class="page-content-wrapper">
        <div class="page-content">
            <div class="page-bar">
                <div class="page-title-breadcrumb">
                    <div class=" pull-left">
                        <div class="page-title">Editer une catégorie</div>
                    </div>
                    <ol class="breadcrumb page-breadcrumb pull-right">
                        <li><i class="fa fa-home"></i>&nbsp;
                            <a class="parent-item"
                               href="{{ path('events_accueil') }}">Accueil</a>&nbsp;
                            <i class="fa fa-angle-right"></i>
                        </li>
                        <li><a class="parent-item" href="{{ path('events_listecategorie') }}">Catégorie</a>&nbsp;<i class="fa fa-angle-right"></i>
                        </li>
                        <li class="active">Editer une catégorie</li>
                    </ol>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <div class="card-box">
                        <div class="card-head">
                            <header>Information sur la catégorie</header>
                        </div>
                        <div class="card-body" id="bar-parent">
                        {{form_start(f, {'attr': {'class': 'form-horizontal'}} )}}
                        <div class="form-group row">
                            <label class="control-label col-md-3">
                                Libelle de la catégorie
                                <span class="required"> * </span>
                            </label>
                            {{ form_widget(f.Libelle, {'attr': {'class' : 'col-md-5 form-control input-height'}}) }}
                        </div>
                        <div class="form-group row">
                            <label class="control-label col-md-3">
                                Description de la catégorie
                                <span class="required"> * </span>
                            </label>
                            {{ form_widget(f.Description, {'attr': {'class' : 'col-md-5 form-control input-height'}}) }}
                        </div>
                        <div class="form-actions">
                            <div class="row">
                                <div class="offset-md-3 col-md-9">
                                    {{ form_widget(f.Ajouter,
                                        {'attr' :{ 'class' : 'mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect m-b-10 m-r-20 btn-pink'}}) }}
                                    <button type="reset" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect m-b-10 btn-default">Annuler</button>
                                </div>
                            </div>
                        </div>
                        {{form_end(f)}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- end page content -->
{% endblock %}