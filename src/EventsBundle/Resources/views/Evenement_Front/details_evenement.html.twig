{% extends 'Base_frontend/base.html.twig' %}
{% block titre %}
     {{ event.titre}}
{% endblock %}
{%  block baniere %}
     <section class="hero-wrap hero-wrap-2" style="background-image: url({{asset('assets/Front/images/bg_2.jpg')}});">
          <div class="overlay"></div>
          <div class="container">
               <div class="row no-gutters slider-text align-items-center justify-content-center">
                    <div class="col-md-9 ftco-animate text-center">
                         <h1 class="mb-2 bread">Nos événements</h1>
                         <p class="breadcrumbs"><span class="mr-2"><a href="#">Home <i class="ion-ios-arrow-forward"></i></a></span>
                              <span><a href="{{ path('events_frontshow') }}"> Evénements</a> <i class="ion-ios-arrow-forward"></i></span></p>
                    </div>
               </div>
          </div>
     </section>
{% endblock %}
{% block content %}

     <section class="ftco-section">
          <div class="container">
               <div class="row">
                    <div class="col-lg-8 ftco-animate">
                         <h2 class="mb-3">{{ event.titre}}</h2>

                         <p>
                              <img src="{{asset('../public/images/events/')}}{{ event.imageName }}"
                                   alt="{{ event.imageName }}"
                                   class="img-fluid "
                                   style="height: auto"
                              >
                         </p>
                         <p>{{ event.description }}</p>
                         {% if event.club is not empty %}
                         <div class="about-author d-flex p-4 bg-light">
                              <div class="bio mr-5">
                                   <img src="{{asset('../public/pas_image.png')}}"
                                        alt="Image placeholder"
                                        class="img-fluid mb-4"
                                        width="100"
                                   />
                              </div>
                              <div class="desc">
                                   <h3>{{ event.club.Nom}}</h3>
                                   <p>{{ event.club.Description}}</p>
                              </div>
                         </div>
                         {% endif %}
                         <div class="row">
                              <div class="col-md-5 col-6 b-r"> <strong>Date de début</strong>
                                   <br>
                                   <p >{{ event.date|date}}</p>
                              </div>
                         </div>
                         <div class="row">
                              <div class="col-md-5 col-6 b-r"> <strong>Date de fin</strong>
                                   <br>
                                   <p>{{ event.datefin|date}}</p>
                              </div>
                         </div>
                         <div class="row">
                              <div class="col-md-5 col-6"> <strong>Lieu</strong>
                                   <br>
                                   <p>{{ event.lieu}}</p>
                              </div>
                         </div>
                         <div class="row">
                              <div class="col-md-3 col-6"> <strong>Frais</strong>
                                   <br>
                                   <p class="center">{{ event.frais}}</p>
                              </div>
                         </div>
                         <div class="row">
                              <div class="col-md-3 col-6"> <strong>Nombre maximal de participant</strong>
                                   <br>
                                   <p class="center">{{ event.nbParticipantMax}}</p>
                              </div>
                         </div>
                         <div class="row">
                              <div class="col-md-3 col-6"> <strong>Catégorie</strong>
                                   <br>
                                   <p class="center">{{ event.categorie.libelle}}</p>
                              </div>
                         </div>
                    </div>

               </div>
               <div class="col-lg-4 sidebar ftco-animate">
                    <div class="sidebar-box">
                        {% if userConnected and estParticipant == false  and event.date > date() %}
                         <a href="{{ path('events_frontparticiper', { 'idevent' : event.idevenement , 'ideleve' : 1}) }}">
                              <button class="btn btn-success">
                                   Participer
                              </button>
                         </a>
                         {% else %}
                         <a href="#">
                              <button class="btn btn-danger">
                                   Participer
                              </button>
                         </a>
                        {% endif %}
                    </div>
               </div>
          </div>
     </section>
{% endblock %}
{% block javascripts %}
     <script type="text/javascript">
          $("#evenement").addClass("active");
     </script>
{% endblock %}