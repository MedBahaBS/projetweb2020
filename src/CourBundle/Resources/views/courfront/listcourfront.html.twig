{% extends "Base_frontend/base.html.twig" %}
{% block titre %} Vos cours {% endblock %}
{% block baniere %}
    <section class="hero-wrap hero-wrap-2" style="background-image: url({{asset('assets/Front/images/unnamed.png')}});">
        <div class="overlay"></div>
        <div class="container">
            <div class="row no-gutters slider-text align-items-center justify-content-center">
                <div class="col-md-9 ftco-animate text-center">
                    <h1 class="mb-2 bread">Nos cours</h1>
                    <p class="breadcrumbs"><span class="mr-2"><a href="{{ path('cantine_front_homepage') }}">Home <i class="ion-ios-arrow-forward"></i></a></span>
                        <span>Cours <i class="ion-ios-arrow-forward"></i></span></p>
                        <span>Cours <i class="ion-ios-arrow-forward"></i></span></p>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
{% block content  %}
    <section class="ftco-section">
        <div class="container">
            <div class="row">
                {% for infos in cours %}
                <div class="col-md-6 course d-lg-flex ftco-animate">
                    <div class="img" style=""></div>
                    <div class="text bg-light p-4">

                        <h3><a href="#">{{ infos.niveau }}</a></h3>
                        <p class="subheading"><span>Nom chapitre </span> {{ infos.nomchapitre }}</p>
                        <p class="subheading"><span>Date</span>{{ infos.date|date('Y-m-d')}}</p>
                        <p class="subheading"><span>Telecharger cour </span>

                            <a href="{{ asset('uploads/brochures/' ~ infos.lien) }}"> (PDF) </a>

                            <img width="200" height="200" src="{{ infos.qrcode}}" /> </p>

                        <p class="subheading"><span>{{ (infos.likes|length) }}&nbsp;Likes</span>
                            {% if app.user %}
                                {% set existe = false %}
                                {% for like in infos.likes %}
                                    {% if like.id == app.user.id %}
                                        {% set existe =true %}
                                    {% endif %}
                                {% endfor %}
                            {% endif %}
                            {% if app.user %}
                            {% if existe ==false %}
                        <p class="subheading"><span><a href="{{ path('cour_like',{'id':infos.idcour}) }}"> j'aime</a></span></p>
                        {% else %}
                            <p class="subheading"><span><a href="{{ path('cour_dislike',{'id':infos.idcour}) }}">je n'aime pas</a></span></p>
                        {% endif %}
                        {% endif %}
                    </div>



                </div>
                </p>

            </div>
        </div>

        <div class="rate">
            <div id="1" class="btn-1 rate-btn"></div>
            <div id="2" class="btn-2 rate-btn"></div>
            <div id="3" class="btn-3 rate-btn"></div>
            <div id="4" class="btn-4 rate-btn"></div>
            <div id="5" class="btn-5 rate-btn"></div>
        </div>




        {% endfor %}
        </div>
        </div>
        </div>
    </section>

{% endblock %}
{% block javascripts %}
    <script type="text/javascript">
        $("#cours").addClass("active");
    </script>
{% endblock %}
