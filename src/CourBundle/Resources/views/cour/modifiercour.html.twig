{% extends "base.html.twig" %}
{% block container  %}


                <div class="page-title-breadcrumb">
                    <div class=" pull-left">
                        <div class="page-title">Modification de cour </div>
                    </div>

                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <div class="card-box">
                        <div class="card-head">
                            <header>Détails Cours</header>
                        </div>
                            {{ form_start(form) }}
                            <div class="card-body row">
                                <div class="col-lg-6 p-t-20">
                                    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label txt-full-width">
                                        {{ form_widget(form.niveau, { 'attr': {'class': 'mdl-textfield__input'} }) }}

                                        <label class="mdl-textfield__label"> Niveau </label>

                                    </div>
                                </div>
                                <div class="col-lg-6 p-t-20">
                                    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label txt-full-width">
                                        {{ form_widget(form.matiere, { 'attr': {'class': 'mdl-textfield__input'} }) }}

                                        <label class="mdl-textfield__label"> Matière</label>
                                    </div>
                                </div>
                                <div class="col-lg-6 p-t-20">
                                    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label txt-full-width">
                                        {{ form_widget(form.nomchapitre, { 'attr': {'class': 'mdl-textfield__input'} }) }}

                                        <label class="mdl-textfield__label"> Nom de cour </label>
                                    </div>
                                </div>



                                <div class="col-lg-6 p-t-20">
                                    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label txt-full-width">
                                        {{ form_widget(form.email, { 'attr': {'class': 'mdl-textfield__input'} }) }}

                                        <label class="mdl-textfield__label" for="text5"> Adresse e-mail de contact</label>
                                    </div>
                                </div>
                                <div class="col-lg-12 p-t-20">
                                    <label class="control-label col-md-3"> Telecharger cour</label>
                                    {{ form_widget(form.lien, { 'attr': {'class': 'mdl-textfield__input'} }) }}
                                    <div class="col-md-12">
                                        <div id="id_dropzone" class="dropzone"></div>
                                    </div>
                                </div>


                                <div class="col-lg-12 p-t-20 text-center">
                                    <a href="{{ path('cour_list') }}">
                                        <button type="submit"
                                                class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect m-b-10 m-r-20 btn-pink">
                                            Ajouter
                                        </button>
                                    </a>
                                    <button type="reset"
                                            class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect m-b-10 btn-default">
                                        Annuler </button>
                                </div>
                            </div>
                            {{ form_end(form) }}
                    </div>
                </div>
            </div>
{% endblock %}