{% extends 'Base_frontend/base.html.twig' %}
{% block titre %} Newsletter {% endblock %}
{% block content %}
    <section class="ftco-section ftco-no-pt ftco-no-pb contact-section">
        <div class="container">
            <div class="row d-flex align-items-stretch no-gutters">
                <div class="col-md-6 p-4 p-md-5 order-md-last bg-light">
                    {{ form_start(form) }}
                    <div class="form-group">
                        {{ form_row(form.email, {'attr': {'class': 'form-control','placehloder':'Your Email'} }) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.Subscribe, {'attr': {'class': 'btn btn-primary py-3 px-5','value':'Send Message'} }) }}
                    </div>
                    {{ form_end(form) }}
                </div>
                <div class="col-md-6 d-flex align-items-stretch">
                    <img src="/PIDEV_integration/web/../public/images/cantine/newsletters.png" width="600">
                </div>
            </div>
        </div>
    </section>
{% endblock %}
{% block javascripts %}
    <script type="text/javascript">
        $("#cantine").addClass("active");
    </script>
{% endblock %}