{% extends 'base.html.twig' %}
{% block content %}

    <!-- start page content -->
    <div class="page-content-wrapper">
        <div class="page-content">
            <div class="page-bar">
                <div class="page-title-breadcrumb">
                    <div class=" pull-left">
                        <div class="page-title">Ajouter Menu </div>
                    </div>

                </div>
            </div>

            <div class="row">
                <div class="col-sm-12">
                    <div class="card-box">
                        <div class="card-head">
                            <header>  Ajouter Menu</header>
                            {{ nb }}
                        </div>
                        {{   form_start(form) }}
                        <div class="card-body row">
                            <div class="col-lg-6 p-t-20">
                                <div
                                        class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label txt-full-width" >


                                    {{ form_row(form.Jour_Menu, {'attr': {'class': 'form-control'} }) }}

                                </div>
                            </div>

                            <div class="col-lg-6 p-t-20">
                                <div
                                        class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label txt-full-width">
                                   {{ form_row(form.entree, {'attr': {'class': 'form-control'} }) }}

                                </div>
                            </div>
                        </div>
                        <div class="card-body row">
                            <div class="col-lg-6 p-t-20">
                                <div
                                        class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label txt-full-width">
                                  {{ form_row(form.platprincipal, {'attr': {'class': 'form-control'} }) }}

                                </div>
                            </div>


                            <div class="col-lg-6 p-t-20">
                                <div
                                        class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label txt-full-width">
                                  {{ form_row(form.dessert, {'attr': {'class': 'form-control'} }) }}

                                </div>
                            </div>
                        </div>
                        <div class="form-send">
                            <div class="col-lg-12 p-t-20 text-center">


                                {{ form_widget(form.Ajouter, {'attr': {'class': 'mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect m-b-10 m-r-20 btn-pink'}})}}

                            </div>

                        </div>
                        {{   form_end(form) }}


                    </div>
                </div>
            </div>
        </div>
    </div>
    <style>
        option:empty
        {
            display:none;
        }
    </style>

{% endblock %}

