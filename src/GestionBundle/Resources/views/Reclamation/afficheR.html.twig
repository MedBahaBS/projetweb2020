{% extends 'Base_backend/base.html.twig' %}
{% block titre %} Liste des réclamations {% endblock %}
{% block content  %}


<div class="page-content-wrapper">
    <div class="page-content">
        <div class="page-bar">
            <div class="page-title-breadcrumb">
                <div class=" pull-left">
                    <div class="page-title">Liste des reclamations</div>
                </div>

            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="tabbable-line">

                    <div class="tab-content">
                        <div class="tab-pane active fontawesome-demo" id="tab1">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="card card-box">
                                        <div class="card-head">
                                            <header>Liste des reclamations</header>
                                            <div class="tools">
                                                <a class="fa fa-repeat btn-color box-refresh"
                                                   href="javascript:"></a>
                                                <a class="t-collapse btn-color fa fa-chevron-down"
                                                   href="javascript:"></a>
                                                <a class="t-close btn-color fa fa-times"
                                                   href="javascript:"></a>
                                            </div>
                                        </div>
                                        <div class="card-body ">
                                            <div class="table-scrollable">
<div class="table-scrollable">
    <table
            class="table table-striped table-bordered table-hover table-checkable order-column valign-middle"
            id="example4">
        <thead>



        <tr>

            <th> Id  </th>

            <th> Date de la réclamation </th>
            <th> Type de la réclamation </th>
            <th> Le contenu de la réclamation </th>

            <th> etat </th>
            <th>Action</th>
            <th>Passer en jugement </th>



        </tr>
        </thead>
        {% for i in r  %}
    {% if i.etat != "Archivée" %}

            <tr class="odd gradeX">


                <td class="left"> {{i.id }}</td>
                <td class="left">{{ i.dateReclamation|date("m/d/y")}}</td>
                <td class="left">{{ i.typeReclamation }}</td>
                <td class="left">{{ i.contenuReclamation }}</td>
                <td class="left">{{ i.etat }}</td>

                <td>


                    <a href ="{{ path ('gestion_deleteR',{'id':i.id}) }}">
                        <button class="btn btn-danger btn-xs">
                            <i class="fa fa-trash-o "></i>
                        </button>
                    </a>






                </td>
                <td>
                   {{ render(controller('GestionBundle:Reclamation:passer_en_jugement',{'id': i.target_id})) }}

                </td>
                <td>

                       <a href="{{ path('traiter_reclamation',{'id': i.id}) }}">Traiter</a>

                   </td>


            </tr>


{% endif %}
        {% endfor %}



        </tbody>
    </table>
</div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
<i class="fa fa-tripadvisor "> <a href="{{ path('Consulter_archive') }}" class="btn btn-success">Consulter Archive</a></i>
{% endblock %}
